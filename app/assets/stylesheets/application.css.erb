 h2{
   margin: 5px 0;
   font-weight: 700;
 }
 article{
   margin: 20px 0;
   padding: 5px;
   background-color: rgba(0, 0, 0, 0.1);
 }
iframe{
  border: 0;
}
select{
   background: white;
   width: 100px;
   padding: 3px;
   font-size: 16px;
   border: 1px solid #cccccc;
   border-radius: 5px;
   -webkit-appearance: none;
}
.button_to{
  display: inline-block;
}
a:hover{
 color:inherit;
 text-decoration: none;
}
a:active{
 color:inherit;
 text-decoration: none;
}
a:visited{
 color:inherit;
 text-decoration: none;
}
a:link{
 color:inherit;
 text-decoration: none;
}
body{
  font-family: 'Open Sans', sans-serif;
  background: #ffffff url(<%= asset_path 'layout_bg.png' %>) no-repeat left top;
}
header{
  max-width: 800px;
  margin: 10px auto;
}
header .logo{
  height: 60px;
}
.menu_div{
  position: relative;
  height: 70px;
  border-bottom: 1px solid red;
}
nav{
  text-align: right;
  position: absolute;
  bottom: 0;
  right: 0;
}
nav ul{
  margin: 0;
}
nav li{
  display: inline-block;
}
nav a{
  padding: 5px 10px 0 10px;
  transition: background-color 1s;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
nav a:hover{
  background-color: rgba(255, 0, 0, 0.3);
}
nav a:active{
  background-color: rgba(255, 0, 0, 0.3);
}
.home .poster{
  width: 100px;
}
.admin_menu{
  bottom:-30px;
}
.admin_menu a{
  padding: 5px;
}
.admin_menu a:hover{
  background-color: rgba(0, 0, 255, 0.3);
}
.admin_menu a:active{
  background-color: rgba(0, 0, 255, 0.3);
}
.message_div{
  overflow: auto;
}
.flash{
 margin: 2px;
 padding: 5px 20px;
 background-color: rgba(255, 0, 0, 0.5);
}
.yield{
  overflow: auto;
  max-width: 800px;
  margin: 0 auto 100px;
}
section{
  margin: 10px;
}
footer{
  margin: 0 auto;
  width: 500px;
  text-align: center;
}
footer p{
  margin: 3px 0;
}
footer .line{
  border-top: 1px solid RGB(200,0,0);
}
.footer_icon{
  height: 20px;
  margin: 5px 10px;
}
footer p{
  font-size: 12px;
}
.sign_up .form_side{
  padding-top: 20px;
  width: 200px;
}
.field{
  padding: 10px;
}
.actions{
  text-align:center;
}

.sign_up td{
    vertical-align: top;
}
.sign_up textarea{
  width:550px;
  height: 150px;
  overflow: scroll;
}
.login_form{
  display: none;
  position:absolute;
  right:1px;
  top:80px;
  background-color:rgba(0,20,0,0.3);
  border-bottom-left-radius: 10px;
}
.full_screen_background{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.full_screen_center{
  text-align: center;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 1000px;
}
.buy_ticket{
  text-align: center;
}

.buy_ticket table {
  width: 100%;
}
.buy_ticket table td{
    vertical-align: top;
}
.select_panel{
  display: inline-block;
  width: 370px;
  padding: 10px;
  border-radius: 10px;
  background-color: rgba(100, 100, 100, 0.3);

}
.buy_ticket .movie_list{
  margin: 10px;
  display: inline-block;
  width: 150px;
}
.buy_ticket .movie_list img{
  width: 98%;
}



.buy_ticket .ticket_button{
  width: 100%;
  overflow: auto;
}


.buy_ticket .date_button{
  font-size: 20px;
  margin: 10px 0;
  padding: 5px;
  width: 90%;
}

.buy_ticket .choose_date .time_button{
  border: none;
  background-color: rgba(0,0,0,0);
  width:20%;
}
.choose_date form{
  display: inline-block;
}
.choose_movie form{
  display: inline-block;
}
.choose_date .select_movie{
  width: 200px;
}
.choose_date .select_date{
  width: 540px;
}
.choose_date .select_date .time_table{
  text-align: left;
}
.choose_date .select_date .date_list{
  width: 100px;
}
.choose_date .select_date .date_list{
  width: 90px;
  margin: 2px;
}
.choose_date .select_date td{
  padding:10px 0;
}

.choose_movie .select_panel{
  width: 95%;
}

.choose_movie .select_movie .time_list{
  padding: 0 10px;
  text-align: left;
  width: 220px;
}
.choose_movie .select_movie .movie_list{
  width: 350px;
}

.choose_movie .movie_list img{
  width: 120px;
}
.left{
  text-align: left;
}
.buy_ticket .select_seats{
  display: inline-block;
}
.screen {
  height: 20px;
  margin-bottom: 20px;
  color: white;
  background-color: rgba(100, 100, 100, 0.5);
}
.buy_ticket .seat_demo{
  width: 600px;
}
.buy_ticket .ticket_num{
  text-align: left;
  padding: 10px;
  width: 220px;
}
.select_seats .seat{
  padding: 3px;
  margin: 1px;
  font-size: 12px;
}
.select_seats .taken{
  background-color: rgba(100, 100, 100, 0.3);
}
.select_seats .available{
  background-color: rgba(150, 255, 100, 0.6);
}
.select_seats .selected{
  background-color: rgba(255, 255, 100, 0.6);
}

.order_completed{
  text-align:center;
}
.ticket_demo{
  text-align:left;
  width:400px;
  margin:10px auto;
  background-color:rgba(0,0,0,0.1);
  border-bottom-right-radius:10px
}
.ticket_demo .poster{
  width:80px;
  margin-right:10px
}
.ticket_demo p{
  margin: 5px;
}
.ticket_demo td{
  padding:0;
}
.ticket_demo h3{
  margin: 5px 0;
}


.manage_movie .data_body{
  overflow-x: hidden;
  overflow: scroll;
  border: 1px solid black;
}
.manage_movie .data_column_names{
  width: 100%;
  border: 1px solid black;
  border-bottom:none;
}
.manage_movie td{
  padding: 10px;
}
.manage_movie .movie_title {
  width:300px;
}
.manage_movie .date {
  width:100px;
}
.hidden_div{
  display:none;
}
.manage_movie label{
  display: inline-block;
  width: 80px;
}
.manage_movie .data_row{
  width: 100%;
  border-top: 1px solid black;
  -moz-transition: background-color 1s;
  -ms-transition: background-color 1s;
  -o-transition: background-color 1s;
  -webkit-transition: background-color 1s;
}
.manage_movie .data_row:hover{
  background-color: rgba(0, 0, 0, 0.3);
}
.manage_movie .form_row{
  font-size: 15px;
  padding: 10px;
}
.manage_movie .form_item{
  font-size: 15px;
  display:inline-block;
  padding: 10px;
  width:35%;
}
.manage_movie .form_button{
  height: 23px;
  overflow: hidden;
  text-align: center;
  padding: 10px;
}
.manage_movie .poster{
  float:left;
}
.manage_movie .poster img{
  margin-left: 10px;
  width:80px;
  height:120px;
}
.manage_movie .times{
  width: 400px;
}
.manage_movie .youtube_link{
  width:80px;
  height:120px;
  display: inline-block;
  border: 1px solid #A8A8A8 ;
}
.manage_movie .add{
  text-align: center;
}
.manage_movie input{
  width: 180px;
}
.manage_movie #new_movie{
  text-align: center;
}
.manage_movie .runtime{
  font-size: 20px;
}



.movie_show h1{
  margin-top:10px;
  margin-bottom:10px;
}
.movie_show h3{
  margin-top:40px;
  margin-bottom:10px;
}
.movie_show .left_side{
  text-align: center;
  width: 185px;
  float: left;
  padding:10px;
  padding-top:20px;
}

.movie_show .body{
  width: 570px;
  display: inline-block;
  margin: 10px;
}
.movie_show .tagline{
  text-align: center;
}

.movie_show .casts{
  display: inline-block;
  height: 70px;
  width: 280px;
}
.movie_show .casts img{
  float: left;
  margin: 0 10px;
}
.movie_show .left_side button{
  width: 100%;
  margin: 5px 0;
}
.movie_show .ticket_button{
  color: red;
}
.check_create_by_movie .slot{
  width: 120px;
  overflow-x: auto;
  padding:5px;
  margin: 5px;
}
.check_create_by_movie .slot_string{
  width: 150px;
  overflow-x: hidden;
  padding:5px;
  margin: 5px;
}
.check_create_by_movie .new{
  background-color: rgba(255,255,0,0.5);
}

.check_create_by_movie .old{
  background-color: rgba(100,100,100,0.3);
}

.check_create_by_movie .time_comflict{
  color: rgba(255,0,0,1);
}
.check_create_by_movie .form_table{
  border:  1px solid black;
}
.banner_frame{
  overflow: hidden;
}
.banner_container{
}
.banner_div{
  float: left;
}
.banner_image{
  position: relative;
}
